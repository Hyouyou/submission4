<div class = "container">
   <div class = "row">
      <% if flash[:notice] %>
        <div class = "flash">
          <%= flash[:notice]%>
        </div>
      <%end%>
  	    <div class = "col-xs-3">
          <!--ユーザー情報表示-->
          <h1>User info</h1>
          <!--ユーザー情報もろもろ-->
          <div class="user-image">
            <%= attachment_image_tag @book.user, :profile_image, :fill,60,60, format:'jpeg', class:"profile_img", fallback:"no_image.jpg",size:'100x100' %>
          </div>
          <table class = "table table-hover">
            <thead>
              <tr>
                <th>name</th>
                <td><%= @book.user.name%></td>
              </tr>
              <tr>
                <th>introduction</th>
                <td><%= @book.user.introduction %></td>
              </tr>
              <tr>
                <th>follows</th>
                <td>
                  <%= link_to follow_path(@book.user), :method => :get do %>
                    <%= @book.user.followings.count %></td>
                  <% end %>
              </tr>
              <tr>
                <th>follower</th>
                <td>
                  <%= link_to follower_path(@book.user), :method => :get do %>
                    <%= @book.user.followers.count %>
                  <% end %>
                </td>
              </tr>
            </thead>
          </table>
          <!---->
          <!--ここまで-->
          <%= link_to edit_user_path(@book.user), :method => :get do %>
            <i class = "glyphicon glyphicon-wrench aria-hidden=true btn btn-default col-md-12"></i>
          <%end%>

  	       <h2>New book</h2>
           <!--新規投稿フォーム-->
              <%= form_for(@book_new) do |f| %>
                  <div class = "form-group">
                   <%= f.label :title, 'Title'%>
                   <%= f.text_field :title, class:'form-control col-md-12' %>
                  </div>
                  <div class = "form-group">
                   <%= f.label :body, 'Opinion'%>
                   <%= f.text_area :body, class:'form-control col-md-12' %>
                  </div>
                   <%= f.submit"Create Book", class:"btn btn-primary col-md-12"%>
              <%end%>
        <!--投稿フォーム-->
        </div>
  	    <div class = "col-xs-9">
          <h1>Book detail</h1>
          <!--ここから投稿テーブル-->
  	        <table class = "table table-hover">
              <thead>
  	            <tr>
                  <th></th>
  	              <th>Title</th>
  	              <th>Opinion</th>
                  <th></th>
                  <th></th>
  	            </tr>
              </thead>
              <tbody>
                  <tr>
                    <td>
                      <%= attachment_image_tag @book.user, :profile_image, :fill,60,60, format:'jpeg', class:"profile_img", fallback:"no_image.jpg",size:'40x40' %><br>
                      <%= link_to @book.user.name, user_path(@book.user.id) %>
                    </td>
                    <td><%= @book.title %></td>
                    <td><%= @book.body %></td>

                    <!--いいね機能-->
                    <td>
                      <% if @book.favorited_by?(current_user) %>
                      <li>
                          <%= link_to book_favorites_path(@book.id), method: :delete do %>
                          <i class="far fa-heart" aria-hidden="true" style="color: red;"></i>
                          <%= @book.favorites.count %>
                          <% end %>
                      </li>
                      <% else %>
                      <li>
                          <%= link_to book_favorites_path(@book.id), method: :post do %>
                          <i class="far fa-heart" aria-hidden="true"></i>
                          <%= @book.favorites.count %>
                          <% end %>
                      </li>
                      <% end %>
                    </td>
                    <!--ここまで-->

                    <td>カウント数:<%= @book.book_comments.count %></td>

                    <% if @book.user == current_user %>
                      <td><%= link_to"Edit", edit_book_path(@book.id), class:"btn btn-success" %></td>
                      <td><%= link_to"Destroy", book_path(@book.id), class:"btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか?" %></td>
                    <%end%>
                  </tr>
              </tbody>
  	        </table>
            <!--ここまで-->

            <!--ここからコメントform-->
            <%= form_for [@book,@comment] do |f| %>
              <div class="row">
                <div class="col-sm-12">
                  <%= f.text_area :comment, class:"form-control"%><span><%= f.submit"送信" %></span>
                </div>
              </div>
            <% end %>
            <!--ここまで-->

            <!--コメント一覧-->
            <table class="table hover">
              <thead>
                <tr>
                  <th></th>
                  <th>Comment</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
              <% @book.book_comments.each do |comment| %>
                <tr>
                  <td>
                    <%= link_to user_path(@book.user) do %>
                     <%= attachment_image_tag @book.user, :profile_image, :fill,60,60, format:'jpeg', class:"profile_img", fallback:"no_image.jpg",size:'40x40' %>
                    <% end %>
                  </td>
                  <td><%= comment.comment %></td>
                  <td>
                    <% if comment.user == current_user %>
                      <%= link_to "destroy", book_book_comment_path(@book.id), class:"btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか?" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
            <!--ここまで-->
  	    </div><!--col9のdiv-->
    </div><!--rowのdiv-->
</div>
