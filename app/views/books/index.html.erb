<div class = "container">
   <div class = "row">
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
        <% @book.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <%end%>
      <%end%>
  	    <div class = "col-xs-3">
          <!--ユーザー情報表示-->
          <h1>User info</h1>
          <!--ユーザー情報もろもろ-->
          <%= render 'users/sidetable' %>
          <!---->

          <!--ここまで-->
          <div class = "row">
            <% if @user.id == current_user.id %>
              <%= link_to edit_user_path(@user), :method => :get do %>
                <i class = "glyphicon glyphicon-wrench aria-hidden=true btn btn-default col-md-12"></i>
              <%end%>
            <%end%>
            <!--フォロー機能-->
            <%= render 'relationships/follow_bottun', user: @user %>
            <!--パーシャル利用-->
          </div>

  	       <h2>New book</h2>
           <!--新規投稿フォーム-->
              <%= form_for(@book_new) do |f| %>
                  <div class = "form-group row">
                   <%= f.label :title, 'Title'%>
                   <%= f.text_field :title, class:'form-control col-md-12' %>
                  </div>
                  <div class = "form-group row">
                   <%= f.label :body, 'Opinion'%>
                   <%= f.text_area :body, class:'form-control col-md-12' %>
                  </div>
                  <div class = "row">
                   <%= f.submit"Create Book", class:"btn btn-primary col-md-12"%>
                  </div>
              <%end%>
        <!--投稿フォーム-->
        </div>
  	    <div class = "col-xs-9">
          <h1>Books</h1>
  	        <table class = "table table-hover">
              <thead>
  	            <tr>
                  <th></th>
  	              <th>Title</th>
  	              <th>Opinion</th>
  	            </tr>
              </thead>
              <tbody>
                <% @books.each do |book|%>
                  <tr>
                    <td>
                      <%= link_to user_path(book.user) do %>
                       <%= attachment_image_tag book.user, :profile_image, :fill,60,60, format:'jpeg', class:"profile_img", fallback:"no_image.jpg",size:'40x40' %>
                      <% end %>
                    </td>
                    <td><%= link_to book.title, book_path(book.id) %></td>
                    <td><%= book.body %></td>

                    <!--いいね機能等-->
                    <td>
                      <% if book.favorited_by?(current_user) %>
                      <li>
                          <%= link_to book_favorites_path(book.id), method: :delete do %>
                          <i class="far fa-heart" aria-hidden="true" style="color: red;"></i>
                          <%= book.favorites.count %>
                          <% end %>
                      </li>
                      <% else %>
                      <li>
                          <%= link_to book_favorites_path(book.id), method: :post do %>
                          <i class="far fa-heart" aria-hidden="true"></i>
                          <%= book.favorites.count %>
                          <% end %>
                      </li>
                      <% end %>
                    </td>
                      <!--ここまで-->

                    <td>コメント数:<%= book.book_comments.count %></td>
                  </tr>
                <%end%>
              </tbody>
  	        </table>
  	    </div>
    </div>
</div>
