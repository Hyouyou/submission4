<div class = "container">
  <% if flash[:notice] %>
    <div class = "flash">
      <%= flash[:notice]%>
    </div>
  <%end%>
   <div class = "row">
  	    <div class = "col-xs-3">
          <!--ユーザー情報表示-->
          <h1>User info</h1>
          <!--profile画像を埋め込み-->
            <div class = "user-image">
              <%= attachment_image_tag @user, :profile_image, :fill,60,60, format:'jpeg', class:"profile_img", fallback:"no_image.jpg",size:'100x100' %>
            </div>

          <table class = "table table-hover">
            <thead>
              <tr>
                <th>name</th>
                <td><%= @user.name%></td>
              </tr>
              <tr>
                <th>introduction</th>
                <td><%= @user.introduction %></td>
            </thead>
          </table>
          <div class = "row">
            <div class="col-xs-12">
              <%= link_to edit_user_path(@user), :method => :get do %>
                <i class = "glyphicon glyphicon-wrench aria-hidden=true btn btn-default col-md-12"></i>
              <%end%>
            </div>

            <!--フォロー機能-->
            <div class="col-xs-8">
              <%= render 'relationships/follow_bottun', user: @user %>
            </div>
            <!--パーシャル利用-->
          </div>
          <!--ここまで-->

  	      <h2>New book</h2>
           <!--新規投稿フォーム-->
              <%= form_for(@book) do |f| %>
                <div class = "form-group row">
                  <%= f.label 'Title'%>
                  <%= f.text_field :title, class:'form-control col-md-12' %>
                </div>
                <div class = "form-group row">
                  <%= f.label 'Opinion'%>
                  <%= f.text_area :body, class:'form-control col-md-12' %>
                </div>
                <div class = "action row">
                  <%= f.submit"Create Book", class:"btn btn-primary col-md-12"%>
                </div>
              <%end%>
        <!--投稿フォーム-->
        </div>
        <!--current_userの投稿一覧-->
        <div class = "col-xs-9">
        <h1>Books</h1>
  	        <table class = "table table-hover">
  	          <thead>
  	            <tr>
                  <th></th>
  	              <th>Title</th>
  	              <th>Opinion</th>
  	            </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>
                  <tr>
                    <td><%= attachment_image_tag @user, :profile_image, :fill,60,60, format:'jpeg', class:"profile_img", fallback:"no_image.jpg",size:'40x40' %></td>
                    <td><%= link_to book.title, book_path(book.id)  %></td>
                    <td><%= book.body %></td>
                  </tr>
                <%end%>
              </tbody>
  	        </table>
  	    </div>
    </div>
</div>
