<div class = "container">
   <div class = "row">
  	    <div class = "col-xs-3">
          <!--ユーザー情報表示-->
          <h1>User info</h1>
          <!--profile画像を埋め込み-->
          <!--ユーザー情報もろもろ-->
          <%= render 'users/sidetable' %>
          <!---->
          
          <div class = "row">
            <% if @user.id == current_user.id %>
              <%= link_to edit_user_path(@user), :method => :get do %>
                <i class = "glyphicon glyphicon-wrench aria-hidden=true btn btn-default col-md-12"></i>
              <%end%>
            <%end%>

            <!--フォロー機能-->
            <%= render 'relationships/follow_bottun', user: @user %>
            <!--パーシャル利用-->
          </div>

  	      <h2>New book</h2>
           <!--新規投稿フォーム-->
              <%= form_for(@book) do |f| %>
                <div class = "form-group row">
                  <%= f.label 'Title'%>
                  <%= f.text_field :title, class:'form-control col-md-12' %>
                </div>
                <div class = "form-group row">
                  <%= f.label 'Opinion'%>
                  <%= f.text_area :body, class:'form-control col-md-12' %>
                </div>
                <div class = "form-group row">
                  <%= f.submit"Create Book", class:"btn btn-primary col-md-12"%>
                </div>
              <%end%>
        <!--投稿フォーム-->
        </div>
        <!--current_userの投稿一覧-->
        <div class = "col-xs-9">
        <h1>Users</h1>
  	        <table class = "table table-hover">
  	          <thead>
  	            <tr>
                  <th>image</th>
  	              <th>name</th>
  	              <th></th>
                  <th></th>
                  <th></th>
                  <th></th>
  	            </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= attachment_image_tag user, :profile_image, :fill,60,60, format:'jpeg', class:"profile_img", fallback:"no_image.jpg",size:'40x40' %></td>
                    <td><%= user.name %></td>
                    <td><p>フォロー数:<%= user.followings.count %></p></td>
                    <td><p>フォロワー数:<%= user.followers.count %></p></td>

                    <td>
                      <% unless user == current_user %>
                        <% if current_user.following?(user) %>
                          <%= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
                            <%= f.hidden_field :follow_id, value: user.id %>
                            <%= f.submit 'フォローを外す' %>
                          <% end %>
                        <% else %>
                          <%= form_for(current_user.relationships.build) do |f| %>
                            <%= f.hidden_field :follow_id, value: user.id %>
                            <%= f.submit 'フォローする' %>
                          <% end %>
                        <% end %>
                    </td>
                    <% end %>
                    <td><%= link_to "Show", user_path(user.id) %></td>
                  </tr>
                <%end%>
              </tbody>
  	        </table>
  	    </div>
    </div>
</div>
